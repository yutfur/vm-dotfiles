set $orange #d65d0e

# ギャップ設定
gaps inner 10px
gaps outer 0px
smart_gaps off

# ボーダー設定
default_border pixel 1
default_floating_border pixel 1
#default_border pixel 5
#default_floating_border pixel 5
hide_edge_borders both

